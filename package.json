{
  "name": "nxocto",
  "version": "0.1.0",
  "description": "Auto-run utilities for Next.js projects",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "nxocto": "dist/src/cli.js"
  },
  "packageManager": "pnpm@10.30.1",
  "scripts": {
    "build": "tsc",
    "test": "pnpm build && jest",
    "test:unit": "jest tests/imageConverter.test.ts",
    "test:cli": "pnpm build && jest tests/cli.test.ts",
    "dev": "tsc --watch",
    "generate-fixtures": "pnpm build && node dist/scripts/generate-test-fixtures.js"
  },
  "keywords": [
    "nextjs",
    "utilities",
    "image-optimization",
    "webp",
    "avif",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "sharp": "^0.34.5",
    "svgo": "^4.0.0"
  }
}
